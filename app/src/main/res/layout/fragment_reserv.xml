<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.fragment.ReservFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/noticeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"

            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="7dp"
            app:cardElevation="1dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <!-- LAYOUT 공지사항 레이아웃 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="15dp">

                <View
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_notice"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="학사지원팀"
                        android:textSize="12dp"
                        android:textColor="@color/natural_navy"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:includeFontPadding="false"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17시 이후부터는 최소한의 실습실로 운영됩니다."
                        android:textSize="12dp"
                        android:textColor="@color/semi_black"
                        android:fontFamily="@font/poppins_regular"
                        android:includeFontPadding="false"
                        />
                </LinearLayout>
            </LinearLayout>
            <!-- LAYOUT END 공지사항 레이아웃 -->


        </androidx.cardview.widget.CardView>

        <!-- LAYOUT 콘텐츠 레이아웃 -->
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:paddingLeft="30dp"
            android:paddingRight="30dp"

            android:background="@color/white"
            android:orientation="vertical"

            app:layout_constraintTop_toBottomOf="@+id/noticeView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

            <!-- LAYOUT 실습실 좌석 현황 레이아웃 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- LAYOUT 실습실 좌석 현황 텍스트 레이아웃 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- LAYOUT 실습실 좌석 현황 텍스트 레이아웃 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/todayTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:text="2022-09-15"
                                android:textColor="@color/colorAccent"
                                android:textSize="12dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/noto_sans_kr_bold"
                                    android:includeFontPadding="false"
                                    android:text="실습실 좌석 현황"
                                    android:textColor="@color/natural_navy"
                                    android:textSize="16dp" />

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"/>

                                <!-- 실습실 선택 스피너 -->
                                <Spinner
                                    android:id="@+id/labSelector"
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="right|center"
                                    android:background="@null"
                                    android:dropDownWidth="75dp"
                                    />
                                <View
                                    android:layout_width="12dp"
                                    android:layout_height="6dp"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="10dp"
                                    android:background="@drawable/ic_arrow_down"/>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="15dp"
                                android:background="@color/gray" />
                        </LinearLayout>
                    </LinearLayout>
                    <!-- LAYOUT END 실습실 좌석 현황 텍스트 레이아웃 -->
                </LinearLayout>
                <!-- LAYOUT END 실습실 좌석 현황 레이아웃 -->
                </LinearLayout>
                <!-- LAYOUT END 실습실 좌석 현황 텍스트 레이아웃 -->

                <include
                    android:id="@+id/seatGridView"
                    layout="@layout/sub_seat_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_marginTop="20dp"/>
            </LinearLayout>
            <!-- LAYOUT END 실습실 좌석 현황 레이아웃 -->


            <!-- LAYOUT 예약 정보 입력 레이아웃 -->
            <LinearLayout
                android:id="@+id/reservInputView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/contentLayout">

                <!-- LAYOUT 이용 시간 입력 레이아웃 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이용 시간"
                        android:textColor="@color/natural_navy"
                        android:textSize="14dp"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09:00"
                            android:textSize="14dp"/>
                        <View
                            android:layout_width="12dp"
                            android:layout_height="6dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ic_arrow_down"
                            android:backgroundTint="@color/natural_navy"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="~"
                            android:textSize="18dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11:00"
                            android:textSize="14dp"/>
                        <View
                            android:layout_width="12dp"
                            android:layout_height="6dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ic_arrow_down"
                            android:backgroundTint="@color/natural_navy"
                            />
                    </LinearLayout>
                </LinearLayout>
                <!-- LAYOUT END 이용 시간 입력 레이아웃 -->

                <!-- LAYOUT 팀 인원 입력 레이아웃 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="팀 인원"
                        android:textColor="@color/natural_navy"
                        android:textSize="14dp"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/teamSelector"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:spinnerMode="dialog"
                            android:text="09:00"
                            android:textSize="14dp"/>

                        <View
                            android:layout_width="12dp"
                            android:layout_height="6dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/ic_arrow_down"
                            android:backgroundTint="@color/natural_navy"/>

                    </LinearLayout>
                </LinearLayout>
                <!-- LAYOUT END 팀 인원 입력 레이아웃 -->

            </LinearLayout>
            <!-- LAYOUT END 예약 정보 입력 레이아웃 -->

            <!-- LAYOUT 좌석 선택 정보 레이아웃 -->
            <LinearLayout
                android:id="@+id/selectSeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:orientation="vertical"

                app:layout_constraintTop_toBottomOf="@+id/reservInputView">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="선택 좌석"
                    android:textColor="@color/natural_navy"
                    android:textSize="14dp"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:includeFontPadding="false"/>

                <TextView
                    android:id="@+id/selectSeatTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="좌석을 선택해주세요."
                    android:textSize="14dp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    />
            </LinearLayout>
            <!-- LAYOUT END 좌석 선택 정보 레이아웃 -->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"

                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/semi_light_blue"

                app:layout_constraintTop_toBottomOf="@+id/selectSeat"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="예약 신청"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    style="?android:attr/borderlessButtonStyle"
                    />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- LAYOUT END 콘텐츠 레이아웃 -->

</layout>

